<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_4"
    android:layout_marginEnd="@dimen/margin_8"
    android:layout_marginStart="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_4"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:fontFamily="@font/traffic"
            android:gravity="right"
            android:lineSpacingExtra="1.2dp"
            android:maxLines="2"
            android:textAlignment="gravity"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/title_size"
            tools:ignore="RtlHardcoded"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/podcaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="start"
            android:fontFamily="@font/traffic"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/subtitle_size"
            tools:text="@tools:sample/lorem/random" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/downloadStatus"
                android:layout_width="@dimen/item_list_icon"
                android:layout_height="@dimen/item_list_icon"
                android:layout_margin="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                app:lottie_autoPlay="false"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_rawRes="@raw/download"
                app:lottie_renderMode="automatic" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bookmarkStatus"
                android:layout_width="@dimen/item_list_icon"
                android:layout_height="@dimen/item_list_icon"
                android:layout_margin="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:scaleX="1.7"
                android:scaleY="1.7"
                app:lottie_rawRes="@raw/bookmark"
                app:lottie_renderMode="automatic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/traffic"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="@dimen/subtitle_size"
                    tools:text="۲۶ اردیبهشت ۹۸" />


                <ImageView
                    android:id="@+id/dateIcon"
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="@dimen/margin_16"
                    android:layout_marginStart="@dimen/margin_8"
                    android:src="@drawable/ic_event" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_weight="3"
        tools:ignore="MissingConstraints"
        tools:src="@tools:sample/avatars" />


</LinearLayout>