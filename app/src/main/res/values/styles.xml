<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="popupMenuStyle">@style/popUpMenuStyle</item>

    </style>

    <style name="popUpMenuStyle" parent="@android:style/Widget.Material.PopupMenu">
        <item name="android:textAppearanceSmall">@style/TrafficTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/TrafficTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/TrafficTextAppearance</item>
    </style>

    <style name="BaseToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/BaseToolbarTheme</item>
        <item name="titleTextAppearance">@style/TrafficTextAppearance</item>
    </style>


    <style name="BaseToolbarTheme">
        <item name="android:textColorPrimary">@color/colorTextSecondary</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textAppearanceSmall">@style/TrafficTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/TrafficTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/TrafficTextAppearance</item>
    </style>

    <style name="TrafficTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/traffic</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

</resources>
